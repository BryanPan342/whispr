
<h2 class="text-center m-5">Edit Medical Profile</h2>
<section class="col-8 offset-2 col-sm-6 offset-sm-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :allergies %><br />
    <%= f.text_field :allergies, class: 'form-control m-2'  %>
  </div>

  <div class="field">
    <%= f.label :vaccines %><br />
    <%= f.text_field :vaccines, class: 'form-control m-2'  %>
  </div>

  <div class="field">
    <%= f.label :medication %><br />
    <%= f.text_field :medication, class: 'form-control m-2'  %>
  </div>
  
  <div class="field">
    <%= f.label :diseases %><br />
    <%= f.text_field :diseases, class: 'form-control m-2'  %>
  </div>
  <div class="field">
    <%= f.label :medical_history %><br />
    <%= f.text_field :medical_history, class: 'form-control m-2'  %>
  </div><br>
  

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h2 class="text-center m-5">Edit Affiliated Health Providers</h2>

  <!-- For each provider in the database, put its name and a button to follow/unfollow it,
       i.e. be affiliated with it or cancel affiliation. -->
  <% @users.each do |user| %>
    <% if user.is_healthcare_provider %>
      <h5><%= user.name %></h5>
      <!-- If already affiliated... -->
      <% if current_user.following.include?(user) %>
        <%= form_for(current_user.active_relationships.find_by(followed_id: user.id),
                     html: { method: :delete }) do |f| %>
          <%= f.submit "Unfollow", class: "btn" %>
        <% end %>
      <!-- Else not yet affiliated... -->
      <% else %>
        <%= form_for(current_user.active_relationships.build) do |f| %>
          <div><%= hidden_field_tag :followed_id, user.id %></div>
          <%= f.submit "Follow", class: "btn btn-primary" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<%= link_to "Back", :root %>
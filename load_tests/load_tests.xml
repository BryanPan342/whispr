<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/local/share/tsung/tsung-1.0.dtd" [] >
<tsung loglevel="notice">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="roytest.uyvfmwwgg2.us-west-2.elasticbeanstalk.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking at home page -->
      <thinktime value="2" random="true"></thinktime>

      <!-- visit the sign up page as a new user would do.  -->
      <request>
        <http url='/users/sign_up' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is filling out new user form -->
      <thinktime value="2" random="true"></thinktime>

      <!-- go to to sign_up page and pull authenticity_token-->
      <request>
        <dyn_variable name="authenticity_token"></dyn_variable>
        <http url='/users/sign_up' version='1.1' method='GET'>
          <http_header name="Cookie" value="%%_cookie%%" />
        </http>
      </request>

      <setdynvars sourcetype="eval"
				code="fun({Pid,DynVars})->
				{ok,Val}=ts_dynvars:lookup(authenticity_token,DynVars),
				http_uri:encode(Val) end.">
				<var name="encoded_authenticity_token" />
	    </setdynvars>

      <request subst="true">
        <http
          url='/users'
          version='1.1'
          method='POST'
          contents='authenticity_token=%%_encoded_authenticity_token%%&amp;user%5Bis_healthcare_provider%5D=0&amp;user%5Bname%5D=roy%%_tsung_userid%%&amp;user%5Bemail%5D=roy%%_tsung_userid%%%40gmail.com&amp;user%5Bpassword%5D=hydroflask&amp;user%5Bpassword_confirmation%5D=hydroflask&amp;commit=Sign+up'
          content_type='application/x-www-form-urlencoded'>
        </http>
      </request>

      <request>
        <dyn_variable name="authenticity_token"></dyn_variable>
        <http url='/medical' version='1.1' method='GET'>
          <http_header name="Cookie" value="%%_cookie%%" />
        </http>
      </request>

      <setdynvars sourcetype="eval"
				code="fun({Pid,DynVars})->
				{ok,Val}=ts_dynvars:lookup(authenticity_token,DynVars),
				http_uri:encode(Val) end.">
				<var name="encoded_authenticity_token" />
	    </setdynvars>

      <!-- wait for up to 2 seconds, user is editing their information -->
      <thinktime value="2" random="true"></thinktime>

      <request subst="true">
        <http
          url='/users'
          version='1.1'
          method='POST'
          contents='_method=put&amp;authenticity_token=%%_encoded_authenticity_token%%&amp;user%5Ballergies%5D=a&amp;user%5Bvaccines%5D=b&amp;user%5Bmedication%5D=c&amp;user%5Bdiseases%5D=d&amp;user%5Bmedical_history%5D=e&amp;user%5Bcurrent_password%5D=hydroflask&amp;commit=Update'
          content_type='application/x-www-form-urlencoded'>
        </http>
      </request>


    </session>
  </sessions>
</tsung>